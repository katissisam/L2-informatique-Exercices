<?php
 $heure = 14; 
 
 if ($heure >= 0 && $heure < 6) {
     echo "Il est actuellement nuit.";
 } 
 elseif ($heure >= 6 && $heure < 12) {
     echo "Il est actuellement le matin.";
 } 
 elseif ($heure >= 12 && $heure < 18) {
     echo "Il est actuellement l'aprÃ¨s-midi.";
 } 
 elseif ($heure >= 18 && $heure <= 24) {
     echo "Il est actuellement la nuit.";
 } 
 else {
     echo "Heure invalide. Veuillez entrer une valeur entre 0 et 24.";
 }
?>